# admin/.htaccess
# السماح بالوصول إلى جميع الملفات في مجلد admin

<IfModule mod_authz_core.c>
    # Apache 2.4+
    Require all granted
</IfModule>

<IfModule !mod_authz_core.c>
    # Apache 2.2
    Order allow,deny
    Allow from all
</IfModule>

# منع عرض محتويات المجلد
Options -Indexes

# منع الوصول إلى الملفات الحساسة
<Files "*.sql">
    Deny from all
</Files>

<Files "*.log">
    Deny from all
</Files>

<Files "config.ini">
    Deny from all
</Files>

# تحسين الأمان
ServerSignature Off

# Compresión (اختياري)
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css application/javascript
</IfModule>